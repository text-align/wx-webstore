@import "../../components/animation.wxss";
@import '../../components/quantity-regulator/quantity-regulator.wxss';

.spu-details {
  flex: 1;
  width: 100%;
}

.sp-details-actions {
  height: 45px;
  width: 100%;
  background-color: white;
}

.transfer-links {
  flex: 1;
  border-top: solid 1px #f5f5f5;
  height: 100%;
}

.space {
  flex: 1;
}

.contact-button-icon {
  width: 40px;
  position: relative;
}

.contact-button-icon-absolute {
  position: absolute;
  left: 0px;
  width: 40px;
  z-index: 9999;
  opacity: 0;
}

.customer-service-icon {
  width: 40px;
  font-size: 24px;
  text-align: center;
}

.shopping-cart-icon-c {
  width: 40px;
  position: relative;
}

.shopping-cart-icon {
  font-size: 28px;
  text-align: center;
}
.shopping-cart-item-count{
  position: absolute;
  right:5px;
  top: -5px;
  color: white;
  background-color: #f00;
  width: 20px;
  height: 20px;
  font-size: 13px;
  line-height: 20px;
  z-index: 9998;
  border-radius: 50%;
  text-align: center;
}
.sp-details-button {
  text-align: center;
  height: 100%;
  line-height: 45px !important;
  border-radius: 0;
  font-size: 18px;
  background-color: #e64340;
}

.add-to-shopping-cart-button {
  width: 100px;
  background-color: orange !important;
}

.buy-now-button {
  width: 88px;
  height: 45px;
}

.spu-details-page-info {
  width: 100%;
}

.spu-details-page-intro-url {
  width: 100%;
  flex: 1;
}

.spu-details-page-info-fade-in {
  animation: fadeInDown 0.3s;
}

.spu-details-page-info-fade-out {
  animation: fadeOutUp 0.3s;
}

.spu-details-page-intro-url-fade-in {
  animation: fadeInUp 0.3s;
}

.spu-details-page-intro-url-fade-out {
  animation: fadeOutDown 0.3s;
}

.spu-details-item {
  width: 100%;
  background-color: white;
}

.spu-img {
  display: block;
  width: 100%;
}

.spu-name {
  display: block;
  font-size: 17pt;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.spu-intro {
  display: block;
  font-size: 12pt;
  line-height: 24px;
  color: #888;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.spu-price {
  text-align: left;
}

.spu-sale-price {
  font-size: 24pt;
  color: #f00;
}

.spu-sale-price::before {
  content: '￥';
  font-size: 20pt;
}

.spu-market-price {
  font-size: 16pt;
  color: #888;
  text-decoration: line-through;
}

.spu-stat-item {
  display: flex;
  width: 100%;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  color: #7a7a7a;
  background-color: #f6f6f6;
}

.spu-sku-current-shipping-fee, .spu-sku-current-sales-monthly,
.spu-shipment-place {
  flex: 1;
  text-align: center;
}

.spu-sku-current {
  width: 100%;
  margin: 0 0 5px 0;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  display: flex;
}

.spu-sku-current-label {
  width: 80rpx;
  padding-left: 10rpx;
  color: #888;
  font-size: 14px;
}

.spu-sku-current-name {
  flex: 1;
}

.spu-sku-current-quantity {
  text-align: center;
  width: 80px;
}

.spu-sku-change {
  width: 80rpx;
  color: #888;
  line-height: 60rpx;
}

.spu-shipping-info {
  width: 100%;
  margin: 0 0 5px 0;
  background-color: white;
  display: flex;
}

.spu-shipping-info-label {
  width: 80rpx;
  padding-left: 10rpx;
  color: #888;
  font-size: 14px;
  margin: 12px 0 5px 0;
}

.spu-shipping-info-icon {
  width: 20px;
  text-align: center;
  color: #f00;
  font-size: 12px;
  margin: 15px 0 5px 0;
}

.spu-shipping-info-value {
  flex: 1;
  font-size: 12px;
  margin: 15px 0 5px 0;
}

.spu-shipping-info-pick {
  width: 80rpx;
  color: #888;
  line-height: 40px;
}

.spu-pan-block {
  width: 100%;
  height: 60px;
  line-height: 60px;
  background-color: white;
  text-align: center;
}

.spu-popup-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: transparent;
  box-sizing: border-box;
  position: absolute;
  z-index: 99999;
  bottom: 0;
}

.spu-popup-container-mask {
  flex: 1;
}

.spu-popup-container-content {
  flex: 1;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.spu-popup-container-content-pd {
  padding: 0 10px;
}

.spu-popup-container-mask-fade-in {
  opacity: 0.3;
  background-color: #000;
}

.spu-popup-container-mask-fade-out {
  opacity: 1;
  background-color: transparent;
}

.spu-popup-container-content-fade-in {
  animation: fadeInUp 0.3s;
}

.spu-popup-container-content-fade-out {
  animation: fadeOutDown 0.3s;
}

/*** change skus container css ***/

.spu-skus-row {
  width: 100%;
  display: flex;
}

.spu-skus-row-img-price {
  height: 80px;
  line-height: 80px;
  position: relative;
}

.spu-img-in-sku-c {
  width: 90px;
  height: 90px;
  padding: 5px;
  border-radius: 3px;
  z-index: 999;
  border: solid 1px #f5f5f5;
  background-color: white;
  position: absolute;
  top: -20px;
  left: 0;
  box-sizing: border-box;
}

.spu-img-in-sku {
  display: inline-block;
  width: 100%;
  border-radius: 3px;
}

.sku-price {
  flex: 1;
  padding-left: 120px;
  border-bottom: solid 1px #f5f5f5;
}

.sku-sale-price {
  font-weight: bold;
  color: #f00;
  padding-top: 10px;
}

.sku-sale-price::before {
  content: '￥';
}

.spu-skus-list-label {
  padding-top: 10px;
  font-size: 10pt;
  color: #aaa;
}

.spu-skus-list {
  padding: 5px 0 10px 0;
  height: 40px;
  line-height: 40px;
  border-bottom: solid 1px #f5f5f5;
}

.sku-item {
  padding: 0 10px;
  border: solid 1px #888;
  float: left;
  margin: 0 20px 0 0;
}

.sku-item-selected {
  color: #f00;
  border: solid 1px #f00;
}

.spu-skus-quantity {
  height: 40px;
  line-height: 40px;
  border-bottom: solid 1px #f5f5f5;
}

.spu-skus-quantity-label {
  font-size: 10pt;
  color: #aaa;
  flex: 2;
}

.spu-skus-quantity-control {
  text-align: right;
  flex: 1;
  padding-top: 5px;
}

/*** pick shipping place container css ***/

.spu-shipping-info-head {
  height: 40px;
  line-height: 40px;
  text-align: center;
  position: relative;
}

.spu-shipping-info-label {
  color: #aaa;
}

.spu-shipping-info-body {
  flex: 1;
}

.close-button-icon {
  position: absolute;
  right: 8px;
  top: 3px;
}

.spu-shipping-info-list {
  border-bottom: solid 1px #f5f5f5;
}

.shipping-info-item {
  padding: 8px 0;
  border-top: solid 1px #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  font-size: 12px;
  display: flex;
}

.shipping-info-default-flag::before {
  content: '默认';
  background-color: #f6680a;
  color: white;
  font-size: 12px;
  padding: 4px;
}

.shipping-info-item-selected {
  color: #f00;
}

.shipping-info-details {
  padding-left: 10px;
  font-size: 12px;
  flex: 1;
}

.shipping-info-picker-marker {
  width: 60px;
  font-size: 12px;
  text-align: center;
  color: #f00;
}

.spu-shipping-info-foot {
  height: 45px;
}

.shipping-info-add-button {
  text-align: center;
  border-radius: 0;
}
