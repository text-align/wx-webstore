.order-item-list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.order-box{
    width: 100%;
}
.order-item {
  width: 100%;
  height: 130px;
  padding: 0 5px;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
}
.item-img-c {
  flex: 1;
  text-align: center;
}
.item-img {
  width: 100px;
  height: 100px;
  vertical-align: middle;
  padding: 0 10px;
}

.item-other {
  flex: 2;
  height: 90px;
  vertical-align: middle;
}
.item-name {
  flex: 2;
  width: 100%;
  font-size: 14pt;
  font-weight: bold;
}
.item-shipment-place {
  flex: 2;
  width: 100%;
  font-size: 12px;
  color: #aaa;
}
.item-price-sales {
  flex:2.5;
  width: 100%;
}
.item-sale-price{
  font-size: 25px;
  color: #ff0000;
  padding-right: 5px;
  margin-top:5px;
}
.item-sale-price::before{
  content: ' ï¿¥';
  font-size: 25px;
}
.item-market-price {
  flex: 2.5;
  font-size: 18px;
  color: #888;
  text-decoration: line-through;
}
.item-skus-quantity-control {
  text-align: left;
  flex:1;
  color: #888;
}
