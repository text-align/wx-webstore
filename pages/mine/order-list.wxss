.order-list {
  width: 100%;
}

.order {
  width: 100%;
  background-color: white;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
}

.order-head {
  width: 100%;
  height: 30px;
  padding: 0 4px;
  margin: 8px 0 0 0;
  background-color: white;
  border-bottom: solid 1px #aaa;
}

.order-foot {
  width: 100%;
  height: 44px;
  padding: 0 4px;
  background-color: white;
}

.order-code {
  flex: 1;
  font-size: 12px;
}

.order-code::before {
  content: '订单号：';
  font-size: 12px;
}

.order-amount-label {
  text-align: right;
  font-size: 14px;
}

.order-amount-value {
  text-align: left;
}

.order-amount-value::before {
  content: '￥';
  font-size: 12px;
}

.order-items {
  width: 100%;
  height: 100px;
  padding: 0 4px;
  margin: 1px 0 0 0;
  background-color: #f4f4f4;
  border-top: solid 1px #f5f5f5;
}

.order-items-img-single {
  flex: 1;
  text-align: center;
}

.order-items-img-list {
  text-align: center;
  margin: 0 3px;
}

.item-img {
  width: 90px;
  height: 90px;
  vertical-align: middle;
}

.order-items-other {
  flex: 2;
  height: 90px;
  vertical-align: middle;
}

.order-items-other2 {
  flex: 1;
  height: 90px;
  line-height: 90px;
  text-align: right;
  vertical-align: middle;
}

.item-spu-name {
  flex: 1;
  width: 100%;
  font-size: 14px;
  font-weight: bold;
}

.item-sku-name {
  flex: 1;
  width: 100%;
  font-size: 12px;
  color: #aaa;
}

.item-price-quantity {
  flex: 2;
  width: 100%;
}

.item-price {
  color: #f00;
  font-size: 18px;
}

.item-price::before {
  content: '￥';
  font-size: 12px;
}

.item-quantity {
  font-size: 16px;
  padding-right: 5px;
  color: #aaa;
}

.item-quantity::before {
  content: 'x';
  font-size: 14px;
}

.order-status-space {
  flex: 4;
}

.inline-form {
  display: block;
}

.list-button {
  background-color: white;
  border: solid 1px #aaa;
}

.list-button-pay {
  margin-top: 4px;
}

.order-status-space2 {
  flex: 0.3;
}

.order-status {
  text-align: right;
  font-size: 14px;
  color: #f00;
}
